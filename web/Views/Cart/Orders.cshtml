
@model List<Nhom3.Models.SanPhamChiTiet>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    Decimal tongtien = 0;
}

<!-- Breadcrumb Start -->
<div class="breadcrumb-area mt-30">
    <div class="container">
        <div class="breadcrumb">
            <ul class="d-flex align-items-center">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li class="active">@Html.ActionLink("Giỏ hàng", "Orders", "Cart")</li>
            </ul>
        </div>
    </div>
    <!-- Container End -->
</div>
<!-- Breadcrumb End -->
<!-- Cart Main Area Start -->
<div class="cart-main-area ptb-100 ptb-sm-60">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <!-- Form Start -->
                <form action="#">
                    <div class="table-content table-responsive mb-45">
                        <!-- Table Content Start -->
                        @if (Model.Count == 0)
                        {
                            <h2>Chưa có sản phẩm nào trong giỏ hàng</h2>
                        }
                        @if (Model.Count != 0)
                        {

                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-thumbnail">Ảnh</th>
                                        <th class="product-name">Sản phẩm</th>
                                        <th class="product-size">Kích cỡ</th>
                                        <th class="product-price">Giá</th>
                                        <th class="product-quantity">Số lượng</th>
                                        <th class="product-subtotal">Tổng</th>
                                        <th class="product-remove">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row-order-@item.IDCTSP">
                                            <td class="product-thumbnail">
                                                <a href="@Url.Action("ProductDetail","Product",new { id = item.MaSP })"><img src="@item.SanPham.HinhAnh" alt="cart-image" /></a>
                                            </td>
                                            <td class="product-name"><a href="@Url.Action("ProductDetail","Product",new { id = item.MaSP })">@item.SanPham.TenSP</a></td>
                                            <td class="product-size"><b>@item.KichCo.TenKichCo</b></td>
                                            <td class="product-price"><span class="amount">@string.Format(info, "{0:c0}", item.ChiTietHoaDons.First().GiaMua)</span></td>
                                            <td class="product-quantity">
                                                <button type="button" class="qty-btn minus" onclick="changeQty(this, -1)" style="background-color: white; color: black; border: none;font-size:40px;">
                                                    -
                                                </button>
                                                <input type="number" readonly value="@item.ChiTietHoaDons.First().SoLuongMua"
                                                       data-price="@item.ChiTietHoaDons.First().GiaMua"
                                                       data-max="@item.SoLuong"
                                                       style="width:60px;text-align:center;" />
                                                <button type="button" class="qty-btn plus" onclick="changeQty(this, 1)" style=" background-color: white; color: black; border: none;font-size:40px;">
                                                    +
                                                </button>
                                            </td>
                                            <td class="product-total"><span class="amount">@(string.Format(info,"{0:c0}", item.ChiTietHoaDons.First().GiaMua * item.ChiTietHoaDons.First().SoLuongMua))</span></td>
                                            <td class="product-remove"> <a style="cursor: pointer" onclick="xoaGioHang(@item.IDCTSP)"><i class="fa fa-times" aria-hidden="true"></i></a></td>
                                        </tr>
                                        tongtien += item.ChiTietHoaDons.First().GiaMua * item.ChiTietHoaDons.First().SoLuongMua;
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                    <!-- Table Content Start -->
                    <div class="row">
                        <!-- Cart Button Start -->
                        <div class="col-md-8 col-sm-12">
                            <div class="buttons-cart">
                                @*@Html.ActionLink("Cập nhật giỏ hàng", "Orders", "Cart")*@
                                <a href="javascript:void(0)" onclick="updateCart()">Cập nhật giỏ hàng</a>
                                @Html.ActionLink("Tiếp tục mua sắm", "Index", "Home")
                            </div>
                        </div>
                        <!-- Cart Button Start -->
                        <!-- Cart Totals Start -->
                        <div class="col-md-4 col-sm-12">
                            <div class="cart_totals float-md-right text-md-right">
                                <h2>Thành tiền</h2>
                                <br />
                                <table class="float-md-right">
                                    <tbody>

                                        <tr class="order-total">
                                            <th>Tổng</th>
                                            <td>
                                                <strong><span class="amount" id="order-total">@(string.Format(info, "{0:c0}",tongtien))</span></strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="wc-proceed-to-checkout">
                                    @if (Model.Count == 0)
                                    {
                                        <a href="#">Đặt hàng</a>
                                    }
                                    @if (Model.Count != 0)
                                    {
                                        @Html.ActionLink("Đặt hàng", "CheckOut", "Cart")
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- Cart Totals End -->
                    </div>
                    <!-- Row End -->
                </form>
                <!-- Form End -->
            </div>
        </div>
        <!-- Row End -->
    </div>
</div>
<!-- Cart Main Area End -->
@section Script{
    <script>
        async function changeQty(button, delta) {
            let row = button.closest("tr");
            let input = row.querySelector('input[type="number"]');
            let currentValue = parseInt(input.value) || 0;
            let maxQty = parseInt(input.getAttribute("data-max")) || 9999; // số lượng tồn kho
            let newValue = currentValue + delta;
            let idctsp = row.id.replace("row-order-", "");

            // Nếu nhấn trừ khi đang là 1 → gọi xóa luôn
            if (delta < 0 && currentValue === 1) {
                xoaGioHang(idctsp); // gọi hàm xóa trực tiếp
                return; // dừng xử lý
            }
            console.log("idctsp", idctsp)

            console.log(delta, "____________", newValue, " ----------", maxQty)
            // Nếu nhấn cộng mà vượt quá số lượng tồn kho
            if (delta > 0 && newValue > maxQty) {
                swal({
                    title: "Thông báo",
                    text: "Sản phẩm đã hết hàng hoặc vượt quá số lượng trong kho!",
                    icon: "error",
                    button: "Đóng",
                });
                return;
            }

            await updateGioHang(idctsp, newValue)

            // Cập nhật lại giá trị mới
            input.value = newValue;
        }
        function updateCart(maSp) {
            let rows = document.querySelectorAll("tbody tr");
            let total = 0;

            rows.forEach(row => {
                let input = row.querySelector('input[type="number"]');
                if (!input) return;

                let price = parseInt(input.getAttribute("data-price"));
                let qty = parseInt(input.value);
                let subtotal = price * qty;

                // cập nhật thành tiền từng dòng
                let subtotalCell = row.querySelector(".product-total .amount");
                subtotalCell.textContent = subtotal.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });

                total += subtotal;
            });
                
            // cập nhật tổng tiền
            document.getElementById("order-total").textContent = total.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
        }
    </script>
}