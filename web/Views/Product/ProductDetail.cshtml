@{
    var tk = Session[Nhom3.Session.ConstaintUser.USER_SESSION] as TaiKhoanNguoiDung;
}

<div id="box-danhgia" class="mt-4" style="padding-left:20px;width:1200px;margin:auto">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Đánh giá sản phẩm</h3>
        <button id="btn-show-form" class="btn btn-outline-dark btn-sm">
            💬 Viết đánh giá
        </button>
    </div>


    <!-- Thêm đánh giá (chỉ khi đăng nhập) -->
    @if (tk != null)
    {
        if (TempData["Error"] != null)
        {<div class="alert alert-warning">@TempData["Error"]</div>}
    if (TempData["Success"] != null)
    {<div class="alert alert-success">@TempData["Success"]</div>}

<div class="card p-3 mb-3">


    <div id="form-danhgia" class="card p-3 mb-3" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" id="dg-maSP" value="@Model.MaSP" />

        <div class="form-group">
            <label>Xếp hạng:</label><br />
            <label><input type="radio" name="dg-xepHang" value="1" /> Tốt</label>
            <label class="ml-3"><input type="radio" name="dg-xepHang" value="2" /> Trung bình</label>
            <label class="ml-3"><input type="radio" name="dg-xepHang" value="3" /> Tệ</label>
        </div>

        <div class="form-group">
            <label>Bình luận:</label>
            <textarea id="dg-binhLuan" class="form-control" rows="3" maxlength="500"></textarea>
        </div>

        <div class="form-group">
            <label>Tên:</label>
            <input type="text" class="form-control" value="@tk.HoTen" readonly />
        </div>

        <button id="btnGuiDanhGia" class="btn btn-primary">Gửi đánh giá</button>
    </div>

</div>
}
else
{
<p>Bạn cần <a href="@Url.Action("Login", "Home")">đăng nhập</a> để gửi đánh giá.</p>
}

    <hr />

    <!-- Partial hiển thị danh sách đánh giá cho sản phẩm (server render) -->
    <div id="danh-sach-danhgia">
        @Html.Action("DanhSachTheoSP", "DanhGia", new { maSP = Model.MaSP })
    </div>
</div>

@section Script {
    <script>
        $(function () {
            $('#btnGuiDanhGia').click(function (e) {
                e.preventDefault();

                var maSP = $('#dg-maSP').val();
                var binhLuan = $('#dg-binhLuan').val().trim();
                var xepHang = $('input[name="dg-xepHang"]:checked').val();

                if (!xepHang) {
                    Swal.fire('Thông báo', 'Vui lòng chọn xếp hạng.', 'warning');
                    return;
                }
                if (binhLuan.length === 0) {
                    Swal.fire('Thông báo', 'Vui lòng nhập bình luận.', 'warning');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("ThemDanhGia", "DanhGia")',
                    type: 'POST',
                    data: {
                        maSP: maSP,
                        xepHang: xepHang,
                        binhLuan: binhLuan
                    },
                    success: function (res) {
                        if (res.success) {
                            Swal.fire({
                                title: 'Thành công',
                                text: res.message,
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.reload();
                                }
                            });
                        } else {
                            Swal.fire({
                                title: 'Lỗi',
                                text: res.message,
                                icon: 'error'
                            }).then(() => {
                                if (res.redirect) window.location = res.redirect;
                            });
                        }
                    },
                    error: function () {
                        Swal.fire('Lỗi', 'Có lỗi, thử lại.', 'error');
                    }
                });
            });
        });
        $(document).ready(function () {
            // lấy các phần tử
            var input = $("#modal-soluong");

            $(".qty-btn.minus").click(function () {
                let value = parseInt(input.val()) || 1;
                if (value > 1) {
                    input.val(value - 1);
                }
            });

            $(".qty-btn.plus").click(function () {
                let value = parseInt(input.val()) || 1;
                input.val(value + 1); // test cơ bản chưa check tồn kho
            });
        });

        $('#btn-show-form').click(function () {
            $('#form-danhgia').slideToggle();
            $(this).text(function (i, text) {
                return text.includes('Ẩn') ? '✏️ Viết đánh giá' : 'Ẩn đánh giá ▲';
            });
        });

    </script>
}

