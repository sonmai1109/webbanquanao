@using Nhom3.Models
@model Nhom3.Models.SanPham
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Breadcrumb Start -->
<div class="breadcrumb-area mt-30">
    <div class="container">
        <div class="breadcrumb">
            <ul class="d-flex align-items-center">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li>@Html.ActionLink("Cửa hàng", "Shop", "Product")</li>
                <li class="active">@Html.ActionLink(Model.TenSP, "ProductDetail", "Product", new { id = Model.MaSP }, new { })</li>
            </ul>
        </div>
    </div>
    <!-- Container End -->
</div>
<!-- Breadcrumb End -->
<!-- Product Thumbnail Start -->
<div class="main-product-thumbnail ptb-100 ptb-sm-60">
    <div class="container">
        <div class="thumb-bg">
            <div class="row">
                <!-- Main Thumbnail Image Start -->
                <div class="col-lg-5 mb-all-40">
                    <!-- Thumbnail Large Image start -->
                    <div class="tab-content">
                        <div id="thumb1" class="tab-pane fade show active">
                            <a data-fancybox="images" href="@Model.HinhAnh"><img src="@Model.HinhAnh" alt="product-view"></a>
                        </div>
                    </div>
                </div>
                <!-- Main Thumbnail Image End -->
                <!-- Thumbnail Description Start -->
                <div class="col-lg-7">
                    <div class="thubnail-desc fix">
                        <h3 class="product-header" style="font-weight:bold;">@Model.TenSP</h3>
                        <p style="opacity: .8; font-weight: bold;">Danh mục : @Model.DanhMuc.TenDanhMuc</p>
                    </div>
                    <!-- da sua -->
                    <div class="pro-price mtb-30">
                        @if (ViewBag.KhuyenMai != null)
                        {
                            <p class="d-flex align-items-center">
                                <span class="old-price" style="text-decoration: line-through; color: gray; margin-right: 10px;">
                                    @string.Format(info, "{0:c0}", Model.Gia)
                                </span>
                                <span class="new-price" style="color:red; font-weight:bold;">
                                    @string.Format(info, "{0:c0}", ViewBag.GiaHienThi)
                                </span>
                                <span class="badge badge-danger" style="margin-left:10px;">-@ViewBag.KhuyenMai.PhanTram</span>
                            </p>
                        }
                        else
                        {
                            <p class="d-flex align-items-center">
                                <span class="price">@string.Format(info, "{0:c0}", Model.Gia)</span>
                            </p>
                        }
                    </div>

                    <p style="font-size: 1.2em; color: #666666; font-weight: bold;">Mô tả:</p>
                    <p class="mb-20 pro-desc-details">@Model.MoTa</p>
                    <div class="product-size mb-20 clearfix">
                        <label style="font-weight: bold;">Kích cỡ</label>
                        <select class="" id="modal-kichco-soluong">
                            @foreach (var item in ViewBag.SPCT)
                            {
                                <option value="@item.IDCTSP">@item.KichCo.TenKichCo</option>
                            }
                        </select>
                    </div>
                    <div class="color clearfix mb-20">
                        <label style="font-weight: bold;">Màu</label>
                        <input type="color" value="@Model.MaMau.Trim()" disabled />
                    </div>
                    <p style="font-size: 16px; font-weight: bold;">Số lượng</p>
                    <div class="box-quantity d-flex hot-product2">

                        <form action="#" style="display:flex;height:30px;">
                            <button onmouseover="this.style.background='#e62e04'"
                                    onmouseout="this.style.background='black'" type="button" class="qty-btn minus" style="background-color: black; color: white; border: none;">
                                -
                            </button>
                            <input class="quantity mr-15" id="modal-soluong" min="1" value="1" style="border: none; background-color: white;">
                            <button onmouseover="this.style.background='#e62e04'"
                                    onmouseout="this.style.background='black'" type="button" class="qty-btn plus" style="margin-left: -15px; background-color: black; color: white; border: none;">
                                +
                            </button>
                        </form>

                        <br />
                        <div class="pro-actions">
                            @if (ViewBag.Exitst.SoLuong > 0)
                            {
                                <div class="actions-primary">
                                    <button id="order-text" type="button" onclick="themVaoGioHang()" class="add-cart" title="" data-original-title="Thêm" style=" border: none; margin-top: 55px; margin-left: -135px; width: 310px;"> Thêm vào giỏ</button>
                                </div>
                            }
                            @if (ViewBag.Exitst.SoLuong == 0)
                            {
                                <div class="actions-primary">
                                    <button id="order-text" type="button" onclick="themVaoGioHang()" class="add-cart" title="" data-original-title="Thêm" disabled style="border: none; margin-top: 55px; margin-left: -135px; width: 310px;">Hết hàng! Hãy chọn kích cỡ khác</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- Thumbnail Description End -->
        </div>
        <!-- Row End -->
    </div>
</div>
<!-- Container End -->
<!-- Product Thumbnail End -->
<!-- Product Thumbnail Description Start -->

<style>
