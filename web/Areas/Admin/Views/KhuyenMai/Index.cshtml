
@model PagedList.IPagedList<Nhom3.Models.KhuyenMai>
@using PagedList.Mvc
@{
    ViewBag.Title = "Khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css">
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
    <div class="d-block mb-4 mb-md-0">
        <h2 class="h4">Danh sách khuyến mãi</h2>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-primary" id="addPopup">
                <span class="fas fa-plus mr-2"></span>Thêm khuyến mãi
            </button>

        </div>
    </div>
</div>

<div class="table-settings mb-4">
    <div class="row align-items-center justify-content-between">
        <div class="col col-md-6 col-lg-3 col-xl-4">
            <form>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon2"><span class="fas fa-search"></span></span>
                    <input type="text" class="form-control" name="q" value="@ViewBag.q" id="exampleInputIconLeft" placeholder="Tên khuyến mãi" aria-label="Search" aria-describedby="basic-addon2" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên chương trình</th>
                <th>% giảm</th>
                <th>Thời gian</th>
                <th>Trạng thái</th>
                <th>Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row-@item.MaKM">
                    <td>@item.MaKM</td>
                    <td>@item.TenKM</td>
                    <td>@item.PhanTram %</td>
                    <td>@(item.NgayBatDau?.ToString("dd/MM/yyyy") ?? "-") - @(item.NgayKetThuc?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>
                        <span class="font-weight-bold @(item.TrangThai==1 ? "text-success" : "text-danger")">
                            @(item.TrangThai==1 ? "Hiển thị" : "Đã ẩn")
                        </span>
                    </td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0" data-toggle="dropdown">
                                <span class="icon icon-sm"><span class="fas fa-ellipsis-h icon-dark"></span></span>
                                <span class="sr-only">Tùy chọn</span>
                            </button>
                            <div class="dropdown-menu">
                                <button class="dropdown-item" onclick="loadData(@item.MaKM)"><span class="fas fa-edit mr-2"></span>Chỉnh sửa</button>
                                <a class="dropdown-item" href="@Url.Action("ManageProducts","KhuyenMai", new { area = "Admin", id = item.MaKM })"><span class="fas fa-box mr-2"></span>Sản phẩm</a>
                                <button class="dropdown-item" onclick="toggleStatus(@item.MaKM)"><span class="fas fa-eye-slash mr-2"></span>Ẩn/Hiện</button>
                                <button class="dropdown-item text-danger" onclick="deleteData(@item.MaKM)"><span class="fas fa-trash-alt mr-2"></span>Xóa</button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="card-footer px-3 border-0 d-flex align-items-center justify-content-between">
        @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page, pageSize = Model.PageSize, searchString = ViewBag.searchString }))
    </div>
</div>

@section Popup {
    <!-- Create Popup -->
    <div class="popUp" id="popUp" style="display:none;">
        <div class="card card-body bg-white border-light shadow-sm mb-3">
            <h2 class="h5 mb-1">Thêm khuyến mãi</h2>
            <form id="add-form" onsubmit="return themKhuyenMai()">
                <div class="form-group">
                    <label>Tên chương trình</label>
                    <input class="form-control" name="TenKM" required />
                </div>
                <div class="form-group">
                    <label>Phần trăm (%)</label>
                    <input class="form-control" type="number" name="PhanTram" min="0" max="100" required />
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <textarea class="form-control" name="MoTa"></textarea>
                </div>
                <div class="form-row">
                    <div class="col">
                        <label>Ngày bắt đầu</label>
                        <input class="form-control" type="date" name="NgayBatDau" />
                    </div>
                    <div class="col">
                        <label>Ngày kết thúc</label>
                        <input class="form-control" type="date" name="NgayKetThuc" />
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                    <div class="btn border-primary cancelPopup">Hủy</div>
                </div>
                <p id="add-message"></p>
            </form>
        </div>
    </div>

}

@section changePopup {
    <!-- Edit Popup -->
    <div class="changePopUp" id="changePopUp" style="display:none;">
        <div class="card card-body bg-white border-light shadow-sm mb-4">
            <h2 class="h5 mb-4">Chỉnh sửa khuyến mãi</h2>
            <form id="update-form" onsubmit="return suaKhuyenMai()">
                <input type="hidden" id="makm" name="MaKM" />
                <div class="form-group">
                    <label>Tên chương trình</label>
                    <input class="form-control" id="tenkm" name="TenKM" required />
                </div>
                <div class="form-group">
                    <label>Phần trăm (%)</label>
                    <input class="form-control" id="phantram" name="PhanTram" type="number" min="0" max="100" required />
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <textarea class="form-control" id="mota" name="MoTa" rows="3"></textarea>
                </div>
                <div class="form-row">
                    <div class="col">
                        <label>Ngày bắt đầu</label>
                        <input class="form-control" id="ngaybatdau" name="NgayBatDau" type="date" />
                    </div>
                    <div class="col">
                        <label>Ngày kết thúc</label>
                        <input class="form-control" id="ngayketthuc" name="NgayKetThuc" type="date" />
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-secondary">Chỉnh sửa</button>
                    <div class="btn border-primary cancelPopup">Hủy</div>
                </div>
                <p id="update-message"></p>
            </form>
        </div>
    </div>
}

@section deletePopup {
    <div class="deletePopUp" id="deletePopUp" style="display:none;">
        <div class="signin-inner my-3 my-lg-0 bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
            <h6 class="form-group mb-4 text-center">Bạn có chắc chắn muốn xóa khuyến mãi này?</h6>
            <input type="hidden" value="" id="delete-km-id" />
            <div class="row d-flex flex-row">
                <button type="button" class="btn btn-block btn-danger" onclick="xoaKhuyenMai()">Chắc chắn</button>
                <div class="btn btn-block border-primary cancelPopup" id="cancelPopupDel">Hủy</div>
            </div>
        </div>
    </div>
}

@section Script {
    <script src="~/Areas/Admin/Scripts/KhuyenMai.js"></script>
}

